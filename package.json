{
  "name": "bay102",
  "version": "1.0.0",
  "description": "bay102",
  "main": "index.ts",
  "scripts": {
    "build": "npx tsc",
    "start": "node backend/dist/index.js",
    "dev": "concurrently --kill-others \"npx tsc --watch\" \"nodemon -w backend/dist/index.js\"",
    "hot-reload": "nodemon --watch \"backend/**\" --ext \"ts,json\" --ignore \"backend/**/*.spec.ts\" --exec \"ts-node backend/index.ts\"",
    "heroku-postbuild": "cd frontend && npm install --only=dev && npm install && npm run build",
    "test": "jest --detectOpenHandles --forceExit"
  },
  "author": "Gassa Yan",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-promise-router": "^4.1.1",
    "lodash": "^4.17.21",
    "pg": "^8.7.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/express-promise-router": "^3.0.0",
    "@types/jest": "^27.5.1",
    "@types/lodash": "^4.14.182",
    "@types/node": "^17.0.35",
    "@types/pg": "^8.6.5",
    "concurrently": "^7.2.0",
    "jest": "^28.1.0",
    "nodemon": "^2.0.16",
    "ts-jest": "^28.0.2",
    "ts-node": "^10.8.0",
    "typescript": "^4.6.4"
  },
  "engines": {
    "npm": ">=6.0.0",
    "node": ">=14 <15"
  }
}
